---
const navItems = [
  { name: 'Inicio', url: '#inicio' },
  { name: 'Sobre Mí', url: '#sobre-mi' },
  { name: 'Proyectos', url: '#proyectos' },
  { name: 'Experiencia', url: '#experiencia' },
  { name: 'Contactame', url: '#contacto' },
];
---

<header class="fixed w-full bg-slate-900/90 backdrop-blur-sm z-50 transition-all duration-300">
  <div class="container mx-auto px-6">
    <div class="flex items-center justify-between h-16 md:h-20">
      <a href="#" class="text-white font-bold text-xl md:text-2xl">
        <span class="text-primary">Fabrizio Valverde</span>
      </a>
      
      <nav class="hidden md:flex items-center space-x-8">
        {navItems.map(item => (
          <a 
            href={item.url} 
            class="text-slate-300 hover:text-white transition-colors text-sm font-medium"
          >
            {item.name}
          </a>
        ))}
    
      </nav>
      
      <button id="menu-toggle" class="md:hidden text-white">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
  </div>
  
  <div id="mobile-menu" class="md:hidden hidden bg-slate-800 transition-all duration-300">
    <div class="container mx-auto px-6 py-4">
      <nav class="flex flex-col space-y-4">
        {navItems.map(item => (
          <a 
            href={item.url} 
            class="text-slate-300 hover:text-white transition-colors font-medium py-2"
          >
            {item.name}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const header = document.querySelector('header');
  
  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
  
  // Cerrar menú móvil al hacer clic en un enlace
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
    if (!mobileMenu) return;
      mobileMenu.classList.add('hidden');
    });
  });
  
  // Comportamiento del encabezado al desplazarse
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('py-2', 'shadow-lg');
      header?.classList.remove('py-4');
    } else {
      header?.classList.remove('py-2', 'shadow-lg');
      header?.classList.add('py-4');
    }
  });
</script>

